<%= stylesheet_link_tag 'reviews.css' %>
<% form_for 'review', :url => {:action => 'create'} do |f| %>
  <%= error_messages_for :review %>
  <%= f.hidden_field :product_id, :value => @product.id %>     
  <div class="ui-tabs ui-widget-content ui-corner-all ui-bloc">
    <div class="ui-helper-reset ui-helper-clearfix ui-widget-header ui-corner-all">
      <%= "#{t("leave_us_a_review")}  #{@product.name}" %>
    </div>
    <table cellspacing="0" cellpadding="2">
	<tbody>
	<tr valign="top">
	    <td style="padding-top: 5px; padding-bottom: 5px;" class="fieldtitle right nowrap">
		<strong><%= t('rating') %></strong>
	    </td>
	    <td style="padding-top: 5px; padding-bottom: 5px;">
          <%= render :partial => "reviews/stars",:locals=>{:number=>5} %>
	    </td>
	</tr>
	<tr valign="top">
	    <td class="fieldtitle right nowrap">
		<%= f.label :title, "<strong>#{t('title')}</strong>" %>
	    </td>
	    <td>
		<%= f.text_field :title, :maxlength => "255", :size => "50", :value => '' %>
	    </td>
	</tr>
	<tr valign="top">
	    <td class="fieldtitle right nowrap" style="vertical-align:top">
		<%= f.label :review, "<strong>#{t('content')}</strong>" %>
	    </td>
	    <td>
		<%= f.text_area :review, :wrap => "virtual", :rows => "10", :cols => "50" %>
	    </td>
	</tr>
	<tr>
	    <td> </td>
	    <td style="padding-top: 5px;">
		<%#= f.submit "Submit your review", :class => "button" %>
         <button type="submit" class="ui-state-default ui-corner-all ui-button"><span class="ui-icon ui-icon-check"></span><%= t("submit_your_review") %></button>
	    </td>
	</tr>
    </tbody></table>
  </div>
<% end %>

<br/>
<h2>The fine print</h2>
<ul>
    <li>All submitted reviews are subject to the licence terms set out in our 
        <%= link_to "terms and conditions", url_for(:action => 'terms') %>.
    </li><li>Approved reviews will be posted within one to two business days.
    </li><li>Submissions that do not follow our 
	<%= link_to "review guidelines", url_for(:action => 'submission-guidelines') %> will not be published.
</li></ul>


<% content_for :head do %>
  <%= javascript_include_tag("jquery.rating.js") %>
  <%= javascript_tag("$(document).ready(function(){$('.stars').rating({required:true});});") %>
<% end %>
